---
// src/components/layout/Layout.astro - LAYOUT MARTEK CON CARRITO
import Header from './Header.astro';
import Footer from './Footer.astro';
import { GlobalCart } from '../react/Cart';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
}

const { 
  title, 
  description = "Martek - Bases para camas de alta calidad. Más de 45 años de experiencia en muebles.", 
  image = "/images/og-default.jpg",
  noIndex = false 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- SEO Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(image, Astro.url)} />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={new URL(image, Astro.url)} />
  
  <!-- Robots -->
  {noIndex && <meta name="robots" content="noindex, nofollow" />}
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" href="/favicon.png" />
  
  <!-- Estilos críticos inline -->
  <style>
    *,*::before,*::after{box-sizing:border-box;}
    html{font-family:ui-sans-serif,system-ui,-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif;line-height:1.5;}
    body{margin:0;line-height:inherit;}
    .loading{opacity:0.5;pointer-events:none;}
    .fade-in{animation:fadeIn 0.3s ease-in-out;}
    @keyframes fadeIn{from{opacity:0;}to{opacity:1;}}
    
    /* Colores Martek: Gris, Rojo, Blanco */
    :root {
      --martek-red: #DC2626;
      --martek-red-hover: #B91C1C;
      --martek-gray: #6B7280;
      --martek-dark-gray: #374151;
      --martek-light-gray: #F3F4F6;
    }
  </style>
</head>

<body class="bg-white text-gray-800 antialiased">
  
  <!-- Header -->
  <Header />
  
  <!-- Main Content -->
  <main id="main-content" class="min-h-screen">
    <slot />
  </main>
  
  <!-- Footer -->
  <Footer />

  <!-- ✅ CARRITO GLOBAL - MONTADO PARA ESCUCHAR EVENTOS -->
  <GlobalCart client:load />

  <!-- ✅ SCRIPT BULLETPROOF - EVITA CARGA DOBLE DE CART.JS -->
  <script is:inline>
    // 🔧 FLAG GLOBAL PARA EVITAR CARGA DOBLE
    if (!window.MARTEK_CART_LOADING && !window.MARTEK_CART_LOADED) {
      window.MARTEK_CART_LOADING = true;
      
      console.log('🛏️ Martek - Iniciando carga de carrito...');
      
      // ✅ FUNCIÓN HELPER PARA ESPERAR CARRITO
      function waitForCartReady(maxAttempts = 100) { // 10 segundos max
        return new Promise((resolve) => {
          let attempts = 0;
          
          const checkCart = () => {
            attempts++;
            
            // Verificar múltiples formas de detección
            const hasCartAPI = typeof window.CartAPI !== 'undefined';
            const hasAddToCart = typeof window.addToCart === 'function';
            const hasCartLoaded = window.MARTEK_CART_LOADED === true;
            
            if ((hasCartAPI || hasAddToCart) || hasCartLoaded) {
              console.log('✅ Sistema de carrito detectado');
              window.MARTEK_CART_LOADED = true;
              resolve(true);
            } else if (attempts >= maxAttempts) {
              console.warn('⚠️ Timeout esperando carrito después de', attempts * 100, 'ms');
              resolve(false);
            } else {
              setTimeout(checkCart, 100);
            }
          };
          
          checkCart();
        });
      }
      
      // ✅ CARGAR CART.JS DE FORMA SEGURA
      function loadCartScript() {
        return new Promise((resolve, reject) => {
          // Verificar si ya existe el script
          const existingScript = document.querySelector('script[src="/js/cart.js"]');
          if (existingScript) {
            console.log('🔄 cart.js ya existe, esperando carga...');
            resolve(true);
            return;
          }
          
          console.log('📦 Cargando cart.js...');
          const script = document.createElement('script');
          script.src = '/js/cart.js';
          script.async = false; // Cargar síncronamente para evitar problemas
          
          script.onload = () => {
            console.log('✅ cart.js cargado exitosamente');
            window.MARTEK_CART_LOADED = true;
            resolve(true);
          };
          
          script.onerror = (error) => {
            console.error('❌ Error cargando cart.js:', error);
            reject(error);
          };
          
          document.head.appendChild(script);
        });
      }
      
      // ✅ INICIALIZACIÓN PRINCIPAL
      document.addEventListener('DOMContentLoaded', async function() {
        try {
          // Cargar cart.js
          await loadCartScript();
          
          // Esperar a que se inicialice
          const cartReady = await waitForCartReady();
          
          if (cartReady) {
            console.log('✅ Layout: Sistema de carrito inicializado');
            
            // ✅ CREAR HELPERS GLOBALES
            window.waitForCartAPI = () => waitForCartReady(50);
            
            window.safeAddToCart = async function(productId, productName, productPrice, quantity = 1) {
              const ready = await waitForCartReady(30); // 3 segundos max para operaciones
              
              if (ready) {
                // Intentar múltiples formas de agregar al carrito
                if (typeof window.addToCart === 'function') {
                  window.addToCart(productId, productName, productPrice, quantity);
                  return true;
                } else if (window.CartAPI && typeof window.CartAPI.addProduct === 'function') {
                  return window.CartAPI.addProduct({
                    product_id: productId,
                    product_name: productName,
                    product_price: productPrice,
                    quantity: quantity
                  });
                }
              }
              
              console.error('No se pudo agregar al carrito - sistema no disponible');
              alert('Error: Sistema de carrito no disponible. Por favor, recarga la página.');
              return false;
            };
            
            // 🐛 DEBUG: Disparar evento para notificar que el carrito está listo
            console.log('🐛 DEBUG: Disparando eventos de carrito listo...');
            
            // Evento personalizado para componentes React
            window.dispatchEvent(new CustomEvent('cart-system-ready', {
              detail: { 
                timestamp: Date.now(),
                cartAPI: !!window.CartAPI,
                addToCart: !!window.addToCart
              }
            }));
            
            // También usar el evento que esperan los componentes
            if (window.CartAPI && typeof window.CartAPI.on === 'function') {
              console.log('🐛 DEBUG: Disparando cart:updated...');
              // Simular un evento de carrito actualizado para despertar componentes
              setTimeout(() => {
                window.dispatchEvent(new CustomEvent('cart:updated', {
                  detail: { items: window.CartAPI.getItems ? window.CartAPI.getItems() : [] }
                }));
              }, 100);
            }
            
          } else {
            console.error('❌ Sistema de carrito no se pudo inicializar');
            
            // ✅ FALLBACK: Crear funciones dummy para evitar errores
            window.safeAddToCart = async function() {
              alert('Sistema de carrito no disponible. Por favor, recarga la página.');
              return false;
            };
            
            window.waitForCartAPI = () => Promise.resolve(false);
          }
          
          // 🐛 DEBUG: Verificar qué componentes siguen cargando después de 5 segundos
          setTimeout(() => {
            console.log('🐛 DEBUG: Verificando componentes después de 5 segundos...');
            
            // Verificar elementos con clases de loading
            const loadingElements = document.querySelectorAll('.loading, [data-loading="true"], .spinner');
            if (loadingElements.length > 0) {
              console.log('🐛 DEBUG: Elementos que siguen cargando:', loadingElements);
              loadingElements.forEach((el, index) => {
                console.log(`🐛 Elemento ${index + 1}:`, el.className, el.id, el.textContent?.substring(0, 50));
              });
            }
            
            // Verificar estado de React components
            const reactContainers = document.querySelectorAll('[data-reactroot], [data-react-component]');
            console.log('🐛 DEBUG: Contenedores React encontrados:', reactContainers.length);
            
          }, 5000);
          
        } catch (error) {
          console.error('❌ Error en inicialización del carrito:', error);
          
          // ✅ FALLBACK: Funciones dummy
          window.safeAddToCart = async function() {
            alert('Error del sistema. Por favor, recarga la página.');
            return false;
          };
          
          window.waitForCartAPI = () => Promise.resolve(false);
        }
      });
      
    } else {
      console.log('🔄 Sistema de carrito ya cargado o en proceso');
    }
  </script>
</body>
</html>