---
// src/components/layout/Header.astro - RESPONSIVE CON AUTH EN MENÚ MÓVIL Y HISTORIA
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-40">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
         <div class="text-2xl font-bold">
            <span class="text-gray-600">MAR</span><span class="text-red-600">TEK</span>
          </div>
        </a>
      </div>

      <!-- ✅ NAVEGACIÓN PRINCIPAL (Solo desktop) -->
      <nav class="hidden md:flex items-center space-x-8">
        <a 
          href="/" 
          class="text-gray-600 hover:text-red-600 px-3 py-2 text-sm font-medium transition-colors"
        >
          Inicio
        </a>
        <a 
          href="/productos" 
          class="text-gray-600 hover:text-red-600 px-3 py-2 text-sm font-medium transition-colors"
        >
          Productos
        </a>
        
        <!-- ✅ NUEVO BOTÓN HISTORIA -->
        <a 
          href="/historia" 
          class="text-gray-600 hover:text-red-600 px-3 py-2 text-sm font-medium transition-colors"
        >
          Historia
        </a>
        
        <!-- ✅ MIS PEDIDOS - SE MOSTRARÁ/OCULTARÁ VIA JAVASCRIPT -->
        <a 
          id="nav-mis-pedidos"
          href="/mis-pedidos" 
          class="hidden text-gray-600 hover:text-red-600 px-3 py-2 text-sm font-medium transition-colors"
        >
          Mis Pedidos
        </a>
        
        <a 
          href="/contacto" 
          class="text-gray-600 hover:text-red-600 px-3 py-2 text-sm font-medium transition-colors"
        >
          Contacto
        </a>
      </nav>

      <!-- ✅ ACCIONES DEL HEADER -->
      <div class="flex items-center space-x-4">
        
        <!-- Búsqueda (Solo desktop) -->
        <button 
          id="search-toggle"
          class="hidden md:block p-2 text-gray-600 hover:text-red-600 transition-colors"
          aria-label="Buscar"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </button>

        <!-- ✅ CARRITO (Siempre visible) -->
        <button 
          id="cart-toggle"
          class="relative p-2 text-gray-600 hover:text-red-600 transition-colors"
          aria-label="Carrito de compras"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.5 6M6 6h15l-1.5 6M17 21v-2a2 2 0 00-2-2H9a2 2 0 00-2 2v2"/>
          </svg>
          <!-- Badge del carrito -->
          <span 
            id="cart-badge" 
            class="absolute -top-1 -right-1 h-5 w-5 rounded-full bg-red-600 text-white text-xs flex items-center justify-center font-medium hidden"
          >
            0
          </span>
        </button>

        <!-- ✅ AUTH BUTTONS (Solo desktop) -->
        <div class="hidden md:flex items-center space-x-2">
          <button 
            id="login-btn"
            class="px-4 py-2 text-sm font-medium text-gray-600 hover:text-red-600 transition-colors"
          >
            Ingresar
          </button>
          <button 
            id="register-btn"
            class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-md transition-colors"
          >
            Registrarse
          </button>
          
          <!-- USER MENU (Hidden by default) -->
          <div id="user-menu" class="hidden relative">
            <button 
              id="user-menu-button"
              class="flex items-center space-x-2 p-2 text-gray-600 hover:text-red-600 transition-colors"
            >
              <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                <span class="text-sm font-medium" id="user-avatar">U</span>
              </div>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- ✅ MENÚ MÓVIL TOGGLE -->
        <button 
          id="mobile-menu-toggle"
          class="md:hidden p-2 text-gray-600 hover:text-red-600 transition-colors"
          aria-label="Menú"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- ✅ MENÚ MÓVIL -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200 bg-white">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a 
          href="/" 
          class="block px-3 py-2 text-base font-medium text-gray-600 hover:text-red-600 hover:bg-gray-50 rounded-md transition-colors"
        >
          Inicio
        </a>
        <a 
          href="/productos" 
          class="block px-3 py-2 text-base font-medium text-gray-600 hover:text-red-600 hover:bg-gray-50 rounded-md transition-colors"
        >
          Productos
        </a>
        
        <!-- ✅ HISTORIA EN MÓVIL -->
        <a 
          href="/historia" 
          class="block px-3 py-2 text-base font-medium text-gray-600 hover:text-red-600 hover:bg-gray-50 rounded-md transition-colors"
        >
          Historia
        </a>
        
        <a 
          id="mobile-mis-pedidos"
          href="/mis-pedidos" 
          class="hidden block px-3 py-2 text-base font-medium text-gray-600 hover:text-red-600 hover:bg-gray-50 rounded-md transition-colors"
        >
          Mis Pedidos
        </a>
        <a 
          href="/contacto" 
          class="block px-3 py-2 text-base font-medium text-gray-600 hover:text-red-600 hover:bg-gray-50 rounded-md transition-colors"
        >
          Contacto
        </a>
        
        <!-- ✅ AUTH EN MÓVIL -->
        <div class="border-t border-gray-200 pt-4 mt-4">
          <div id="mobile-auth-logged-out">
            <button 
              id="mobile-login-btn"
              class="block w-full text-left px-3 py-2 text-base font-medium text-gray-600 hover:text-red-600 hover:bg-gray-50 rounded-md transition-colors"
            >
              Ingresar
            </button>
            <button 
              id="mobile-register-btn"
              class="block w-full text-left px-3 py-2 text-base font-medium text-gray-600 hover:text-red-600 hover:bg-gray-50 rounded-md transition-colors"
            >
              Registrarse
            </button>
          </div>
          
          <div id="mobile-auth-logged-in" class="hidden">
            <a 
              href="/perfil" 
              class="block px-3 py-2 text-base font-medium text-gray-600 hover:text-red-600 hover:bg-gray-50 rounded-md transition-colors"
            >
              Mi Perfil
            </a>
            <button 
              id="mobile-logout-btn"
              class="block w-full text-left px-3 py-2 text-base font-medium text-gray-600 hover:text-red-600 hover:bg-gray-50 rounded-md transition-colors"
            >
              Cerrar Sesión
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- ✅ BARRA DE BÚSQUEDA (Hidden by default) -->
  <div id="search-bar" class="hidden border-t border-gray-200 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="relative">
        <input 
          type="text" 
          placeholder="Buscar productos..."
          class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent"
        />
        <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
    </div>
  </div>
</header>

<style>
  /* Asegurar que el header esté por encima del contenido */
  header {
    position: sticky;
    top: 0;
    z-index: 40;
  }
  
  /* Transiciones suaves para el menú móvil */
  #mobile-menu {
    transition: all 0.3s ease-in-out;
  }
  
  /* Hover effects personalizados */
  nav a:hover {
    transform: translateY(-1px);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // ✅ TOGGLE MENÚ MÓVIL
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuToggle && mobileMenu) {
      mobileMenuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
    
    // ✅ TOGGLE BÚSQUEDA
    const searchToggle = document.getElementById('search-toggle');
    const searchBar = document.getElementById('search-bar');
    
    if (searchToggle && searchBar) {
      searchToggle.addEventListener('click', () => {
        searchBar.classList.toggle('hidden');
        if (!searchBar.classList.contains('hidden')) {
          const searchInput = searchBar.querySelector('input');
          searchInput?.focus();
        }
      });
    }
    
    // ✅ CERRAR MENÚS AL HACER CLICK FUERA
    document.addEventListener('click', (e) => {
      if (!mobileMenuToggle?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
        mobileMenu?.classList.add('hidden');
      }
      
      if (!searchToggle?.contains(e.target as Node) && !searchBar?.contains(e.target as Node)) {
        searchBar?.classList.add('hidden');
      }
    });
  });
</script>