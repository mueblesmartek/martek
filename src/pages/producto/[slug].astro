import type { Product } from '../../lib/types';

// ‚úÖ FUNCI√ìN REQUERIDA PARA OUTPUT STATIC
export async function getStaticPaths() {
  if (!supabase) {
    console.warn('Supabase no configurado - generando paths vac√≠os');
    return [];
  }

  try {
    // Obtener todos los productos activos para pre-generar p√°ginas
    const { data: products, error } = await supabase
      .from('products')
      .select('slug, id, name')
      .eq('is_active', true);

    if (error) {
      console.error('Error obteniendo productos para getStaticPaths:', error);
      return [];
    }

    // Generar paths para cada producto
    const paths = products
      .filter(product => product.slug) // Solo productos con slug
      .map(product => ({
        params: { slug: product.slug },
        props: { productId: product.id } // Opcional: pasar ID para optimizaci√≥n
      }));

    console.log(`üèóÔ∏è Generando ${paths.length} p√°ginas de productos est√°ticas`);
    return paths;

  } catch (err) {
    console.error('Error en getStaticPaths:', err);
    return [];
  }
}

// ‚úÖ Obtener slug de la URL y props opcionales
const { slug } = Astro.params;
const { productId } = Astro.props; // Si lo pasaste desde getStaticPaths

// ‚úÖ Variables del producto
let product: Product | null = null;
let relatedProducts: Product[] = [];
let error: string | null = null;

try {
  if (!slug) {
    throw new Error('Slug no proporcionado');
  }

  if (!supabase) {
    throw new Error('Supabase no configurado');
  }

  // ‚úÖ Obtener producto por slug (o por ID si lo tienes)
  const { data: productData, error: productError } = await supabase
    .from('products')
    .select('*')
    .eq('slug', slug)
    .eq('is_active', true)
    .single();

  if (productError) {
    throw new Error(productError.message);
  }

  product = productData;

  // ‚úÖ Obtener productos relacionados
  if (product) {
    const { data: relatedData, error: relatedError } = await supabase
      .from('products')
      .select('*')
      .eq('category', product.category)
      .neq('id', product.id)
      .eq('is_active', true)
      .limit(4);

    if (!relatedError && relatedData) {
      relatedProducts = relatedData;
    }
  }

} catch (err) {
  console.error('Error fetching product:', err);
  error = err instanceof Error ? err.message : 'Error desconocido';
}

// ‚úÖ Si no hay producto, 404 (Astro maneja esto autom√°ticamente en static)
if (!product && !error) {
  return new Response(null, {
    status: 404,
    statusText: 'Producto no encontrado'
  });
}

// ‚úÖ Obtener datos de im√°genes si hay producto
const productImages = product ? getAllImages(product) : [];
const primaryImage = product ? getPrimaryImageUrl(product) : '';
const hasMultiple = product ? hasMultipleImages(product) : false;

// ‚úÖ Metadatos SEO
const pageTitle = product ? `${product.name} - mueblesmartek.com` : 'Producto no encontrado';
const pageDescription = product?.description || 'Producto no disponible';
