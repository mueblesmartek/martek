<script>
  // ‚úÖ FUNCI√ìN PARA CREAR BOT√ìN DE AGREGAR AL CARRITO
  function createAddToCartButton(product) {
    const container = document.getElementById('product-actions');
    if (!container) return;

    const isOutOfStock = product.stock <= 0;

    container.innerHTML = `
      <div class="space-y-4">
        ${!isOutOfStock ? `
          <div class="flex items-center space-x-4">
            <div class="flex items-center border border-gray-300 rounded-lg">
              <button id="qty-minus" class="px-3 py-2 text-gray-600 hover:text-red-600 hover:bg-gray-100 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                </svg>
              </button>
              <input 
                id="quantity-input" 
                type="number" 
                value="1" 
                min="1" 
                max="${product.stock}" 
                class="w-16 px-2 py-2 text-center border-0 focus:outline-none focus:ring-0"
              />
              <button id="qty-plus" class="px-3 py-2 text-gray-600 hover:text-red-600 hover:bg-gray-100 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
              </button>
            </div>
            <span class="text-sm text-gray-500">m√°x ${product.stock}</span>
          </div>
        ` : ''}
        
        <button 
          id="add-to-cart-btn"
          class="${isOutOfStock 
            ? 'w-full bg-gray-300 text-gray-500 cursor-not-allowed py-4 px-6 rounded-lg font-medium'
            : 'w-full bg-gray-900 text-white hover:bg-gray-700 py-4 px-6 rounded-lg font-medium transition-colors'
          }"
          ${isOutOfStock ? 'disabled' : ''}
        >
          ${isOutOfStock ? '‚ùå Producto Agotado' : 'üõí Agregar al Carrito'}
        </button>

        ${!isOutOfStock ? `
          <button 
            id="buy-now-btn"
            class="w-full border-2 border-red-600 text-gray-800 hover:bg-gray-900 hover:text-white py-4 px-6 rounded-lg font-medium transition-colors"
          >
            ‚ö° Comprar Ahora
          </button>
        ` : ''}
      </div>
    `;

    // Event listeners para cantidad
    if (!isOutOfStock) {
      const qtyInput = document.getElementById('quantity-input') as HTMLInputElement;
      const qtyMinus = document.getElementById('qty-minus');
      const qtyPlus = document.getElementById('qty-plus');

      if (qtyMinus && qtyInput) {
        qtyMinus.addEventListener('click', function() {
          const current = parseInt(qtyInput.value);
          if (current > 1) qtyInput.value = (current - 1).toString();
        });
      }

      if (qtyPlus && qtyInput) {
        qtyPlus.addEventListener('click', function() {
          const current = parseInt(qtyInput.value);
          if (current < product.stock) qtyInput.value = (current + 1).toString();
        });
      }

      // Event listener para agregar al carrito
      const addToCartBtn = document.getElementById('add-to-cart-btn');
      if (addToCartBtn && qtyInput) {
        addToCartBtn.addEventListener('click', function() {
          const quantity = parseInt(qtyInput.value);
          console.log('Agregando ' + quantity + ' x ' + product.name + ' al carrito');
          
          // ‚úÖ USAR FUNCIONES DEL public/js/cart.js
          if (typeof window.addToCart === 'function') {
            window.addToCart(product.id, product.name, product.price, quantity);
            
            // Feedback visual
            addToCartBtn.innerHTML = '‚úÖ Agregado!';
            setTimeout(function() {
              addToCartBtn.innerHTML = 'üõí Agregar al Carrito';
            }, 2000);
            
          } else {
            console.error('Sistema de carrito no disponible');
            alert('Error: Sistema de carrito no cargado. Intenta recargar la p√°gina.');
          }
        });
      }

      // Event listener para comprar ahora
      const buyNowBtn = document.getElementById('buy-now-btn');
      if (buyNowBtn && qtyInput) {
        buyNowBtn.addEventListener('click', function() {
          const quantity = parseInt(qtyInput.value);
          console.log('Comprando ' + quantity + ' x ' + product.name);
          
          // Agregar al carrito y redirigir
          if (typeof window.addToCart === 'function') {
            window.addToCart(product.id, product.name, product.price, quantity);
            setTimeout(function() {
              window.location.href = '/checkout';
            }, 500);
          } else {
            window.location.href = '/checkout';
          }
        });
      }
    }
  }

  // ‚úÖ CARGAR GALER√çA DE IM√ÅGENES
  function loadImageGallery(product) {
    const container = document.getElementById('product-gallery');
    if (!container) return;

    const images = product.images || [];
    if (images.length <= 1) return;

    const primaryImage = images.find(function(img) { return img.isPrimary; }) || images[0];
    
    container.innerHTML = `
      <div class="space-y-4">
        <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden">
          <img
            id="main-image"
            src="${primaryImage.url}"
            alt="${primaryImage.alt || product.name}"
            class="w-full h-full object-cover cursor-zoom-in"
            onerror="this.src='data:image/svg+xml;base64,'"
          />
        </div>
        
        <div class="grid grid-cols-4 gap-2">
          ${images.map(function(img, index) { 
            return `
              <button 
                class="aspect-square bg-gray-100 rounded border-2 overflow-hidden transition-all ${
                  img.isPrimary ? 'border-red-600 ring-2 ring-gray-200' : 'border-gray-200 hover:border-gray-400'
                }"
                onclick="selectImage('${img.url}', '${img.alt || product.name}', ${index})"
              >
                <img
                  src="${img.url}"
                  alt="${img.alt || 'Vista ' + (index + 1)}"
                  class="w-full h-full object-cover"
                  onerror="this.src='data:image/svg+xml;base64,'"
                />
              </button>
            `;
          }).join('')}
        </div>
      </div>
    `;
  }

  // ‚úÖ FUNCI√ìN PARA CAMBIAR IMAGEN PRINCIPAL
  function selectImage(url, alt, index) {
    const mainImage = document.getElementById('main-image') as HTMLImageElement;
    if (mainImage) {
      mainImage.src = url;
      mainImage.alt = alt;
    }
    
    // Actualizar estado de thumbnails
    const thumbnails = document.querySelectorAll('#product-gallery button');
    thumbnails.forEach(function(thumb, i) {
      if (i === index) {
        thumb.className = thumb.className.replace('border-gray-200 hover:border-gray-400', 'border-red-600 ring-2 ring-gray-200');
      } else {
        thumb.className = thumb.className.replace('border-red-600 ring-2 ring-gray-200', 'border-gray-200 hover:border-gray-400');
      }
    });
  }

  // ‚úÖ DECLARAR FUNCI√ìN GLOBAL
  window.selectImage = selectImage;

  // ‚úÖ EJECUTAR CUANDO EL DOM EST√â LISTO
  document.addEventListener('DOMContentLoaded', function() {
    console.log('üöÄ Script de producto ejecut√°ndose...');
    
    // Verificar que cart.js est√© cargado
    if (typeof window.addToCart === 'function') {
      console.log('‚úÖ Sistema de carrito disponible');
    } else {
      console.warn('‚ö†Ô∏è Sistema de carrito no disponible');
