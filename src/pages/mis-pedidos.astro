---
// src/pages/mis-pedidos.astro
import Layout from '../components/layout/Layout.astro';
import { UserOrders } from '../components/react/UserOrders';
---

<Layout 
  title="Mis Pedidos - Kamasex.shop"
  description="Consulta el estado de tus pedidos y historial de compras"
>
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Mis Pedidos</h1>
        <p class="text-gray-600">
          Consulta el estado de tus pedidos y tu historial de compras
        </p>
      </div>

      <!-- Breadcrumb -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center justify-center space-x-2 text-sm text-gray-500">
          <li>
            <a href="/" class="hover:text-gray-700 transition-colors">Inicio</a>
          </li>
          <li>
            <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li class="text-gray-900">Mis Pedidos</li>
        </ol>
      </nav>

      <!-- Componente React para gestión de pedidos -->
      <UserOrders client:load />

      <!-- Información adicional -->
      <div class="mt-16 bg-white rounded-lg border p-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-6 text-center">
          ¿Necesitas ayuda con tu pedido?
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h4 class="font-medium text-gray-900 mb-2">Contacto por email</h4>
            <p class="text-sm text-gray-600 mb-3">
              Envíanos un email con tu consulta
            </p>
            <a href="mailto:soporte@kamasex.shop" class="text-gray-900 underline text-sm">
              soporte@kamasex.shop
            </a>
          </div>

          <div class="text-center">
            <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <h4 class="font-medium text-gray-900 mb-2">Teléfono</h4>
            <p class="text-sm text-gray-600 mb-3">
              Llámanos de Lunes a Sábado 9am-6pm
            </p>
            <a href="tel:+573001234567" class="text-gray-900 underline text-sm">
              300 123 4567
            </a>
          </div>

          <div class="text-center">
            <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h4 class="font-medium text-gray-900 mb-2">Preguntas frecuentes</h4>
            <p class="text-sm text-gray-600 mb-3">
              Encuentra respuestas rápidas
            </p>
            <a href="/ayuda" class="text-gray-900 underline text-sm">
              Ver FAQ
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>