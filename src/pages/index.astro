    <script src="https://cdn.tailwindcss.com"></script>

    <style>
      :root {
        --logo-scale: 7;
      }

      body {
        font-family: "Inter Tight", sans-serif;
        font-weight: 200;
      }

      .background-container {
        position: relative;
        min-height: 100vh;
        min-height: 100dvh;
        background-image: url("/images/tacones.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-color: #111827;
      }

      .background-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.266);
        z-index: 1;
      }

      .content-wrapper {
        position: relative;
        z-index: 10;
        min-height: inherit;
      }

      .logo-scaled {
        width: calc(250px * var(--logo-scale));
        height: calc(100px * var(--logo-scale));
      }

      /* Responsive logo */
      @media (max-width: 768px) {
        .logo-scaled {
          width: calc(175px * var(--logo-scale));
          height: calc(70px * var(--logo-scale));
        }
      }

      @media (max-width: 480px) {
        .logo-scaled {
          width: calc(140px * var(--logo-scale));
          height: calc(56px * var(--logo-scale));
        }
      }

      @media (max-width: 768px) {
        .background-container {
          background-attachment: scroll; /* Mejor para móviles */
        }
      }

      .fade-in {
        animation: fadeIn 1s ease-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
    <style>
  /* Estilo base para el cursor de humo */
  .smoke {
    position: absolute;
    width: 15px;
    height: 15px;
    border-radius: 50%;
    pointer-events: none;
    background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, rgba(255,0,0,0.2) 60%, transparent 100%);
    animation: smoke-fade 1s forwards;
    mix-blend-mode: screen;
    z-index: 9999;
  }

  @keyframes smoke-fade {
    0% {
      transform: scale(1);
      opacity: 0.8;
    }
    100% {
      transform: scale(3);
      opacity: 0;
    }
  }
</style>

